<div class="row">
    <div class="col-12 col-md-8">
      <h1 class="mb-3"><%= data.personal_information.name %> (<%= data.personal_information.nickname %>)</h1>
      <div class="bio">
        <%= data.personal_information.bio %>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="contacts mt-3 mt-md-0">
        <i class="fas fa-map-marker-alt mr-2"></i>
        <%= data.personal_information.location %>
        <br>

        <i class="fas fa-envelope mr-2"></i>
        <%= data.personal_information.email %>
        <br>

        <i class="fas fa-phone mr-2"></i>
        <%= data.personal_information.phone %>
        <br>

        <i class="fab fa-github mr-2"></i>
        <a href="https://github.com/<%= data.personal_information.linkedin %>" target="_blank">
          <%= data.personal_information.github %>
        </a>
        <br>

        <i class="fab fa-linkedin mr-2"></i>
        <a href="<%= data.personal_information.linkedin %>" target="_blank">
          LinkedIn
        </a>
      </div>
    </div>
  </div>
